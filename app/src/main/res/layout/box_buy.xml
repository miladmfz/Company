<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/box_buy"
    android:layout_margin="10dp"
    android:layoutDirection="rtl">


    <TextView
        android:id="@+id/box_buy_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:text="GoodName"
        android:textSize="10dp"
        android:layout_margin="3dp"
        android:textColor="@color/grey_1000"
        android:focusable="true">


    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grey_1000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="تعداد"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.3"
                        android:background="@color/grey_20"
                        android:textColor="@color/overlay_dark_90"
                        />

                    <EditText
                        android:id="@+id/box_buy_amount"
                        android:hint="تعداد"
                        android:layout_weight="0.3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:focusable="true"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"/>
                    <Spinner
                        android:id="@+id/box_buy_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.4"
                        android:background="@color/grey_5"
                        android:textColor="@color/overlay_dark_90"
                        android:scrollbarSize="20sp" />
                    <TextView
                        android:id="@+id/box_buy_unit_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.4"
                        android:background="@color/grey_5"
                        android:textColor="@color/overlay_dark_90"
                        android:scrollbarSize="20sp"
                        android:visibility="gone"/>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_20" >
            </androidx.viewpager.widget.ViewPager>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView

                    android:text="فی"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:background="@color/grey_20"
                    android:textColor="@color/overlay_dark_90"

                    />
                <TextView
                    android:id="@+id/box_buy_price"
                    android:hint="فی"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:focusable="true"

                    android:gravity="center"
                    android:maxLength="10">

                </TextView>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_20" >
            </androidx.viewpager.widget.ViewPager>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView

                    android:text="جمع"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:background="@color/grey_20"
                    android:textColor="@color/overlay_dark_90"
                    />
                <TextView
                    android:id="@+id/box_buy_sumprice"
                    android:hint="جمع مبلغ"
                    android:layout_weight="0.3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:focusable="true"

                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="10">

                </TextView>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/box_buy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزودن به سبد خرید"
        android:textStyle="bold"

        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/red_500"
        app:icon="@drawable/ic_add_shopping_black"
        app:iconTint="@color/white"
        app:strokeColor="@color/grey_1000"
        app:strokeWidth="1dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutusActivity"
    android:orientation="vertical"
    android:background="@drawable/back_login"
    android:layoutDirection="rtl">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/operator"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="تماس با ما"
        android:textSize="36dp"
android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"

        android:textDirection="rtl"
        android:lineSpacingExtra="10dp"
        android:layout_weight="0.2"

        />

</androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/callus_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textDirection="rtl"
                android:lineSpacingExtra="10dp"


                />
            <TextView
                android:id="@+id/callus_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textDirection="rtl"
                android:lineSpacingExtra="10dp"


                />



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#ffffff"
                    android:text="شماره تماس :"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/callus_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#ffffff"
                    android:textSize="18sp"
                    android:gravity="center"/>



            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end|bottom">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/callus_kits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.appcompat.widget.LinearLayoutCompat>

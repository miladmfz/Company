<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_allview"
    android:orientation="vertical"
    android:layout_width="76dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="6dp"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/proserch_ggg">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="#000000">

            <ImageView

                android:layout_margin="3dp"
                android:id="@+id/good_allview_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"


                android:scaleType="centerInside" />
        </FrameLayout>


        <TextView
            android:id="@+id/good_allview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:textColor="@color/overlay_dark_90"
            android:textSize="11dp"
            tools:text="نام گروه" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingBottom="1dp"
            android:gravity="bottom">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="کالا"
            android:textColor="@color/overlay_dark_60"
            android:textSize="9dp"
            android:layout_weight="0.6"/>
            <TextView
                android:id="@+id/good_allview_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/overlay_dark_60"
                android:text="500"
                android:textSize="9dp"
                android:layout_weight="0.4"
                android:paddingStart="2dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>
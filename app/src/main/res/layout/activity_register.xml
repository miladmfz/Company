<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:background="@drawable/back_login"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/reg_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ثبت نام "
        android:textSize="26dp"
        android:textColor="@color/grey_1000"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/register_form"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/registration_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:inputType="textImeMultiLine"
                    android:id="@+id/registration_fname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="نام "
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:visibility="visible" />

                <EditText
                    android:inputType="textImeMultiLine"
                    android:id="@+id/registration_lname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="نام خانوادگی"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/registration_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint=" شماره موبایل 09XXXXXXX"
                    android:paddingRight="10dp"
                    android:inputType="numberDecimal"
                    android:textDirection="rtl"
                    android:maxLength="11"
                    android:visibility="visible"
                    />

                <EditText
                    android:id="@+id/registration_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="نام مجموعه"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:maxLength="11"
                    android:visibility="visible" />

                <EditText

                    android:id="@+id/registration_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="ایمیل email@email.com "
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:visibility="visible"
                    android:inputType="textImeMultiLine"
                    />

                <EditText
                    android:id="@+id/registration_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="نام کاربری"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"

                    />

                <EditText
                    android:id="@+id/registration_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="رمز عبور"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:maxLength="12"
                    android:inputType="textPassword"
                    android:gravity="right"


                    />
                <EditText
                    android:id="@+id/registration_repass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_dark"
                    android:hint="تایید رمز عبور"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:gravity="right"
                    android:inputType="textPassword"

                    />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registration_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="ثبت نام"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/deep_orange_600"


                    />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registration_to_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="ورود به حساب کاربری"
                    android:textStyle="bold"
                    android:textColor="@color/grey_1000"
                    app:backgroundTint="@color/grey_40"
                     />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/profile_form"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_edit_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="تغییر رمز عبور"
                    app:backgroundTint="@color/red_500"


                    />
                <ImageView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/profile_img"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="مشتری : "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_customername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_customername"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />


                </androidx.appcompat.widget.LinearLayoutCompat>                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="نام : "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_fname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_name"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="نام خانوادگی : "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_lname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_name"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="شماره موبایل : "
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="0.7"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_mobile"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_mobile"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="آدرس ایمیل : "
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="0.7"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_email"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_email"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="آدرس  : "
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="0.7"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_address"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_address"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/grey_5"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="کد پستی : "
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:layout_weight="0.7"
                        android:visibility="visible" />
                    <TextView
                        android:id="@+id/profile_postaddress"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="profile_email"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_weight="0.3"
                        android:visibility="visible" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/backtohome_profile"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="0.5"
                        android:text="بازگشت"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/green_400" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/update_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="اصلاح مشخصات"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:backgroundTint="@color/green_400"

                        />


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="خروج"
                    android:textSize="20dp"
                    android:textColor="@color/white"

                    android:textStyle="bold"
                    app:backgroundTint="@color/deep_orange_600"
                     />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/login_form"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/login_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="ورود به حساب کاربری "
                    android:textSize="22dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_user_layout"
                    >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="نام کاربری "
                    android:textDirection="rtl"
                    android:inputType="textImeMultiLine"
                    />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="شماره موبایل خود را وارد کنید"
                    android:paddingRight="10dp"
                    android:textDirection="rtl"
                    android:inputType="number|textImeMultiLine"

                    />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    android:id="@+id/login_pass_layout"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_pass"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:hint="رمز عبور"
                        android:paddingRight="10dp"
                        android:textDirection="rtl"
                        android:maxLength="12"
                        android:inputType="textPassword"
                    />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ورود"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/light_blue_900"

                    android:textStyle="bold"
                    android:elevation="15dp"
                    android:layout_margin="15dp"
                    />
                <TextView
                    android:id="@+id/login_recovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="18dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_to_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="15dp"
                    android:layout_margin="10dp"
                    android:text="ثبت نام"
                    android:textSize="24dp"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/deep_orange_600"
                     />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.LinearLayoutCompat>
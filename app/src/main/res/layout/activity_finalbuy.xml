<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FinalbuyActivity"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    >


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/finalbuyActivity_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/finalbuyActivity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:titleTextColor="@color/white"
            android:background="?attr/colorPrimary"

            app:title="نهایی کردن سبد خرید">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey_1000"
            app:cardCornerRadius="2dp"
            app:cardElevation="6dp"
            android:layoutDirection="rtl">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="خریدار"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/finalbuyActivity_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_40" />                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="تعداد ردیف"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/finalbuyActivity_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_40" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="تعداد اقلام"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/finalbuyActivity_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_40" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="جمع کل"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/finalbuyActivity_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_40" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="ادرس"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/finalbuyActivity_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_40" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="@color/grey_20"

                        android:gravity="center"

                        android:text="توضیحات"
                        android:textColor="#000000"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/finalbuyActivity_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@color/white"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:hint="برای تغییر آدرس و توضیحات بیشتر این قسمت را تکمیل کنید"
                        android:textDirection="rtl"
                        />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    >


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/finalbuyActivity_sendbasket"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="bottom"
                        android:text="@string/buy_sendfactor"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textSize="20sp"
                        app:backgroundTint="@color/green_700"
                        app:strokeColor="@color/grey_1000"
                        app:strokeWidth="1dp"
                        />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>

        </com.google.android.material.card.MaterialCardView>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>
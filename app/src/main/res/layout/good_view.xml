<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_prosearch_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/proserch_ggg">




            <ImageView

                android:layout_margin="3dp"
                android:id="@+id/good_prosearch_view_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerInside" />


        <TextView
                android:id="@+id/good_prosearch_view_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
            android:textColor="@color/overlay_dark_90"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="goodname" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/good_prosearch_view_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="قیمت فروش"
                android:textColor="#E61243"
                android:textSize="12sp"
                android:layout_weight="0.5"/>
            <TextView
            android:id="@+id/good_prosearch_view_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:textStyle="bold"
            android:text="قیمت فروش"
            android:textColor="#247E00"
            android:textSize="14sp"
            android:layout_weight="0.5"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/good_prosearch_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/detail_buy"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/red_500"
            app:icon="@drawable/ic_add_shopping_black"
            app:iconTint="@color/white"
            app:strokeColor="@color/grey_1000"
            app:strokeWidth="1dp"
              />







    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>
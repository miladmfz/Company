<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/good_buy_history"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_1000"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"

                    android:text="@string/good_buy_name"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/good_buy_history_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="1dp"
                    android:textSize="14sp"

                    android:textColor="@color/grey_1000"
                    android:layout_weight="0.20"
                    android:textStyle="bold"
                    android:text="@string/good_buy_name" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">


                <TextView
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:text="@string/good_buy_ReservedRows"
                    android:layout_gravity="center"

                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/good_buy_history_ReservedRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/good_buy_ReservedRows"
                    android:layout_weight="0.25"
                    android:textColor="@color/grey_1000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_500"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">


                <TextView
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:text="@string/good_buy_amount"
                    android:layout_gravity="center"

                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/good_buy_history_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/good_buy_amount"
                    android:layout_weight="0.25"
                    android:textColor="@color/grey_1000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"

                android:layout_weight="1">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:text="@string/good_buy_sellprice"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/good_buy_history_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"

                    android:text="@string/good_buy_sellprice"
                    android:textColor="@color/grey_1000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="@string/good_buy_totalsellprice"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/good_buy_history_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/good_buy_totalsellprice"
                    android:textColor="@color/grey_1000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_500" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="@string/good_buy_maxsellprice"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/good_buy_history_maxprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/good_buy_maxsellprice"
                    android:textColor="@color/grey_1000"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />


            </LinearLayout>





        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey_500" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">





                <ImageView
                    android:id="@+id/good_buy_history_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/good_buy_imaga_Description" />



        </androidx.appcompat.widget.LinearLayoutCompat>



    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
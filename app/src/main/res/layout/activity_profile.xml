                                android:layout_weight="0.7"
                                android:gravity="center"
                                android:text="رمز عیور قدیمی : "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13sp"
                                android:visibility="visible" />

                            <EditText

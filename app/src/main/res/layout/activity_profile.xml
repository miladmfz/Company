<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/back_login"
    android:layoutDirection="rtl">


    <TextView
        android:id="@+id/reg_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="اصلاح مشخصات کاربری"
        android:textSize="26dp"
        android:textColor="@color/grey_1000"
        android:paddingTop="15dp"
        android:textStyle="bold" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/profileactivity_form_update_cardview"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/grey_5"
            android:orientation="vertical"
            >
            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_img"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="نام : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_fname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="نام خانوادگی : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_lname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />


            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="شماره موبایل : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_mobile"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:enabled="false"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="آدرس ایمیل : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_email"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="آدرس  : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_address"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="کد پستی : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_postaddress"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نام کاربری: "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_user"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="رمز عیور برای تایید : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_pass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:inputType="textPassword"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_profileactivity_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="بازگشت"
                    android:textSize="14dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_400"
                     />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_profileactivity_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="ثبت تغییرات"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_400"

                    />


            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/profileactivity_form_changepass_cardview"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/grey_5"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_img"
                />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نام کاربری: "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_user_change_pass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="رمز عیور قدیمی : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_changepass_oldpass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="رمز عیور جدید : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_changepass_newpass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:inputType="textPassword"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نکرار رمز عیور جدید : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_changepass_newrepass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:inputType="textPassword"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back_profileactivity_changepass_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="بازگشت"
                    android:textSize="14dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_400"
                     />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_profileactivity_changepass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="ثبت تغییرات"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_400"

                    />


            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/profileactivity_form_recovery"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profileactivity_recovery_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/grey_5"
            android:orientation="vertical"
            android:visibility="visible">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/profileactivity_xrandom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/profileactivity_recovery_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="30dp"
                    android:visibility="visible"
                    />

                <EditText
                    android:id="@+id/profileactivity_recovery_xrandom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="30dp"
                    android:visibility="visible"
                    android:inputType="number"
                    android:maxLength="4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="کد تایید را وارد کنید "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
>

            </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profileactivity_recovery_pass_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/grey_5"
            android:orientation="vertical"
            android:visibility="gone">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نام کاربری : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_recovery_user"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="رمز عیور جدید : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_recovery_pass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:inputType="textPassword"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/grey_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نکرار رمز عیور جدید : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:layout_weight="0.7"
                    android:visibility="visible" />
                <EditText
                    android:id="@+id/profileactivity_recovery_repass"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:inputType="textPassword"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profileactivity_recovery_setbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="ثبت تغییرات"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_400"

                    />

        </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>


</androidx.appcompat.widget.LinearLayoutCompat>